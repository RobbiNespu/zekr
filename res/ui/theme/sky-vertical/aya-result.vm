#set ($MINOR = 0)
#set ($MAJOR = 1)
#if($TRANSLATION == "true")
	#set($CLASS="trans")
	#set($DIR=${TRANS_DIRECTION})
	#set($RPAREN = "(")
	#set($LPAREN = ")")
#else
	#set($CLASS="quran")
	#set($DIR="rtl")
	#set($RPAREN = "&#64831;")
	#set($LPAREN = "&#64830;")
#end

<div class="$CLASS" dir="$DIR">
	<div id="searchableSection" class="searchResult">
	    #foreach ($AYA in $AYA_LIST)
	    	#set($AYA_NUM = $velocityCount)
			#if ($AYA_NUM % 2 == 0)
				#set($ROW_CLASS = "even")
			#else
				#set($ROW_CLASS = "odd")
			#end
			<div id="result_$velocityCount" class="$ROW_CLASS">
			<div class="item">
	    		<span title="${AYA.Key}" class="searchItemNum" id="itemNum_$velocityCount">($AYA_NUM)</span>
		    	#foreach ($AYA_SEGMENT in $AYA.Value)
		    		#if ($velocityCount % 2 == 1)
		    			$AYA_SEGMENT
		    		#elseif ($AYA_SEGMENT.length() > 0)
						<span class="highlight" title="$KEYWORD">$AYA_SEGMENT</span>
		    		#end
		    	#end
		    	<span title="${AYA.Key}" dir="$DIR">
					<a onclick="gotoSuraAya('${AYA.Key}')" href="javascript:void(0)">$RPAREN${AYA.Key.SuraName}: ${AYA.Key.Aya}$LPAREN</a>
					<span title="$DICT.getMeaning('TRANSLATION')" class="handCursor" onclick="translate('${AYA.Key}')"><img src="${ICON_TRANSLATE}"></span>
				</span>
			</div>
			</div>
	    #end
	</div>
</div>