<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<base href="file://$APP_PATH/">
	<link rel="stylesheet" type="text/css" href="file://$CSS_DIR/style.css">
	<script src="$UI_DIR/js/utils.js" language="javascript" type="text/javascript"></script>
	<script src="$UI_DIR/js/search.js" language="javascript" type="text/javascript"></script>
<title>$TITLE</title>
</head>
<body id="quranBody" dir="rtl">
<table class="main">
	#set ($ALIGN = "left")
	#if ($DIRECTION == "rtl")
		#set ($ALIGN = "right")
	#end
	<tr dir="$DIRECTION">
		<td class="searchBarTop" align="$ALIGN">
			$TITLE
		</td>
		<td class="searchBarTop" align="$ALIGN">
			#if ($TOO_MANY_RESULT)
			<i style="color: red">$TOO_MANY_RESULT</i> <br>
			#end
			$COUNT
		</td>
	</tr>

	<tr><td id="quranSection" colspan="2" class="searchResult">
	#parse ("$THEME_DIR/aya-result.vm")
	</td></tr>

	<tr><td class="barBottom">&nbsp;</td></tr>
</table>
</body>
</html>
