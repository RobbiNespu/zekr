#if($DIRECTION == "rtl")
	#set($TRAIL="left")
	#set($LEAD="right")
#else
	#set($TRAIL="right")
	#set($LEAD="left")
#end
<html>
#parse("$THEME_DIR/head.vm")
<body id="search" dir="rtl">
<script>
res = new SearchResult();
</script>
<div id="headerBar" class="headerBar" dir="$DIRECTION">
	<table width="100%" style="padding: 0px; margin: 0px" cellspacing="0" cellpadding="0">
		<tr><td align="$LEAD" width="50%">
			<button title="$PREV_AYA" style="padding: 0px 10px 0px 10px;" onclick="res.prev()">
			<img src="res/image/icon//${LEAD}_arrow.gif" style="margin: 1px" alt="$PREV_AYA" />
			</button>&nbsp;
			<button title="$NEXT_AYA" style="padding: 0px 10px 0px 10px;" onclick="res.next()">
			<img src="res/image/icon/${TRAIL}_arrow.gif" style="margin: 1px" alt="$NEXT_AYA"/>
			</button>
		</td><td <td align="$TRAIL" width="50%">
		<input title="$SURA_MSG" dir="ltr" id="suraNum" type="text" style="width: 3em" readonly="true" /> |
		<input title="$AYA_MSG" dir="ltr" id="ayaNum" type="text" style="width: 3em" readonly="true" />
		<input type="button" value="${GOTO_MSG}" onclick="if ($('#suraNum').val() != '' && $('#ayaNum').val() != '') gotoSuraAya($('#suraNum').val() + '-' + $('#ayaNum').val())" />
		</td></tr>
	</table>
</div>
<div class="searchBody">
<table>
	#set ($ALIGN = "left")
	#if ($DIRECTION == "rtl")
		#set ($ALIGN = "right")
	#end
	<tr dir="$DIRECTION">
		<td class="searchBarTop" align="$ALIGN">
			$TITLE
		</td>
		<td class="searchBarTop" align="$ALIGN">
			#if ($TOO_MANY_RESULT)
			<i style="color: red">$TOO_MANY_RESULT</i> <br>
			#end
			$COUNT
		</td>
	</tr>

	<tr><td id="searchResultSection" colspan="2" class="searchResult">
	#parse ("$THEME_DIR/aya-result.vm")
	</td></tr>

	<tr><td class="barBottom">&nbsp;</td></tr>
</table>
<div>
</body>
</html>
