	<td width="25"><button id="contSuraButton" title="#if($AUD_CONT_SURA=='true')$CONT_SURA_TEXT#else$DISC_SURA_TEXT#end"
		style="width: 25px; height: 25px" onclick="toggleSuraButton(this)" $SURA_BUT_STAT __state="$AUD_CONT_SURA"
		__title="#if($AUD_CONT_SURA=='true')$DISC_SURA_TEXT#else$CONT_SURA_TEXT#end">
		<img src="#if($AUD_CONT_SURA=='true')$CONT_SURA_ICON#else$DISC_SURA_ICON#end"
		__icon="#if($AUD_CONT_SURA=='true')$DISC_SURA_ICON#else$CONT_SURA_ICON#end" alt="" /></button></td>
	<td width="25"><button id="contAyaButton" title="#if($AUD_CONT_AYA=='true')$CONT_AYA_TEXT#else$DISC_AYA_TEXT#end"
		style="width: 25px; height: 25px" onclick="toggleAyaButton(this)" __state="$AUD_CONT_AYA"
		__title="#if($AUD_CONT_AYA=='true')$DISC_AYA_TEXT#else$CONT_AYA_TEXT#end">
		<img src="#if($AUD_CONT_AYA=='true')$CONT_AYA_ICON#else$DISC_AYA_ICON#end"
		__icon="#if($AUD_CONT_AYA=='true')$DISC_AYA_ICON#else$CONT_AYA_ICON#end" alt="" /></button></td>
</tr></table>
