<input type="hidden" id="hiddenVolume" value="$VOLUME" />
<input type="hidden" id="hiddenPlaylistUrl" value="$PLAYLIST_URL" />
<input type="hidden" id="hiddenContinuousAyaPlay" value="$AUD_CONT_AYA" />
<input type="hidden" id="hiddenContinuousSuraPlay" value="$AUD_CONT_SURA" />
<input type="hidden" id="hiddenPlaylistItemArray" value="$UTILS.items2JsArray($PLAYLIST_PROVIDER, $SURA_NUM)" />
<input type="hidden" id="prestartAudioItem" value="$PLAYLIST_PROVIDER.getSpecialItem('prestart')" />
<input type="hidden" id="startAudioItem" value="$PLAYLIST_PROVIDER.getSpecialItem('start')" />
<input type="hidden" id="endAudioItem" value="$PLAYLIST_PROVIDER.getSpecialItem('end')" />
<div id="footerBar" align="center" class="footerBar" dir="${DIRECTION}">
<table><tr>
	<td width="40"><button id="playButton" title="$DICT.getMeaning('PLAY')" style="padding: 0px 5px" __state="false"
	__title="$DICT.getMeaning('PAUSE')" onclick="togglePlayPause();">
	<img src="$RES.getString('theme.icon.play')" __icon="$RES.getString('theme.icon.pause')"
		style="margin: 1px" alt="" />
	</button></td>

	<td width="40"><button id="stopButton" title="$DICT.getMeaning('STOP')" style="padding: 0px 5px"
		onclick="stopPlayer();">
	<img src="$RES.getString('theme.icon.stop')" style="margin: 1px" alt="" />
	</button></td>

