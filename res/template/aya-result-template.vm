#set ($MINOR = 0)
#set ($MAJOR = 1)

#set ($RPAREN = "&#64831;")
#set ($LPAREN = "&#64830;")

#macro (getCssClass $NUM)
#if($NUM % 2 == 0)even#else odd#end
#end


<div class="searchResult">
    #foreach ($AYA in $AYA_LIST)
    	#set($AYA_NUM = $velocityCount)
		<div class="#getCssClass($velocityCount)">
    	<span title="${AYA.Key}">
    		<span>($AYA_NUM)</span>
    	</span>
    	#foreach ($AYA_SEGMENT in $AYA.Value)
    		#if ($velocityCount % 2 == 1)
    			${AYA_SEGMENT}
    		#elseif ($AYA_SEGMENT.length() > 0)
				<span class="highlight">${AYA_SEGMENT}</span>
    		#end
    	#end
		<nobr><span>$RPAREN$AYA.Key$LPAREN</span></nobr>
		</div>
    #end
</div>

